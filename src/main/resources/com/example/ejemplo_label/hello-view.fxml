<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.ejemplo_label.HelloController">

    <!-- Label personalizado -->
    <Label fx:id="fancyLabel" style="-fx-font-size: 24px; -fx-font-family: Arial; -fx-text-fill: #ff6600; -fx-border-color: black; -fx-border-width: 2px; -fx-padding: 10; -fx-background-color: lightblue; -fx-border-radius: 10; -fx-background-radius: 10;" text="Texto inicial">
        <!-- Efecto de sombra para el Label -->
        <effect>
            <DropShadow color="darkgray" radius="10.0" />
        </effect>
    </Label>

    <!-- BotÃ³n para cambiar el texto del Label -->
    <Button onAction="#handleChangeText" text="Cambiar texto del Label" />
</VBox>
